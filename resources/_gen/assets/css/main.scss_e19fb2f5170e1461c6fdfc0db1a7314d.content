html{font-size:clamp(16px,1.5vw,22px);font-family:"Montserrat",sans-serif;color:#f7f7f7}body{background-color:#1c1c1c;border:0;margin:0;padding:0}h1,h2,h3,h4,h5,h6{font-family:"Playfair Display",serif;color:#c79f5e;line-height:1.2;margin-top:1.5em;margin-bottom:.5em}p{font-family:"Montserrat",sans-serif;font-weight:300;line-height:1.5em;margin-top:1em;margin-bottom:1em}a{color:#c79f5e;text-decoration:none;transition:color .2s ease-in-out}a:hover{color:#f7f7f7;text-decoration:underline}a:visited{color:#a9a9a9;font-style:normal}ul,ol{list-style-type:none;padding-left:0;margin-left:0}.container{width:100%;margin:0 auto;padding:0 16px;box-sizing:border-box}main{display:block;margin:0 auto;text-align:left;padding:2em 1.5em}@media(min-width: 768px){.container{max-width:1200px;margin:0 auto;padding:0}}.home-links-grid{text-align:center}.links-grid{display:grid;grid-template-columns:1fr;gap:1.5em;margin-top:2em}@media(min-width: 768px){.links-grid{grid-template-columns:repeat(2, 1fr)}}@media(min-width: 1024px){.links-grid{grid-template-columns:repeat(3, 1fr)}}.creation-container{display:block;padding:1.5em 0}@media(min-width: 768px){.creation-container{display:flex;flex-direction:row;gap:2em;max-width:1200px;margin:0 auto;padding:0}}.creation-list{flex:0 0 220px;text-align:left;padding-right:1.5em}.creation-list h2{font-size:1.2em;text-align:left;margin-top:0;border-bottom:1px solid #c79f5e;padding-bottom:.5em}.creation-list ul a{display:block;padding:.2em 0;font-size:.9em;color:#c79f5e}.creation-list .sidebar-separator{border-bottom:1px solid rgba(199,159,94,.4);margin:.5em 0 1em}.creation-list .active-sidebar-link a{font-weight:700;color:#f7f7f7}.creation{flex:1 1 auto}.specs-grid{display:flex;flex-wrap:wrap;gap:1.5em}.specs-grid div{flex:1 1 200px}header{background-color:#1c1c1c;margin:0;position:sticky;top:0;z-index:1000;padding:.25em 0}@media(max-width: 768px){header{display:flex;flex-direction:column;align-items:center;padding:.5em 0}}.header-inner{max-width:1200px;margin:0 auto;width:100%;display:flex;flex-direction:row;align-items:center;justify-content:space-between;padding:0 1.5em}@media(max-width: 768px){.header-inner{display:block;padding:0 1.5em;text-align:center}}.logo-and-title{display:flex;align-items:center;flex:0 1 auto;gap:1em}@media(max-width: 768px){.logo-and-title{flex-direction:column;gap:.5em;padding-bottom:.5em}}header img{width:15vw;height:auto;max-height:24px;max-width:250px;min-width:80px;display:inline-block;margin:0}header>h1{color:#c79f5e;font-family:"Playfair Display",serif;font-size:1em;letter-spacing:.08em;text-transform:uppercase;white-space:nowrap;margin:0;padding:0;flex:none;text-align:center}.main-nav{background-color:#1c1c1c;color:#f7f7f7;font-family:"Montserrat",sans-serif;border-bottom:.1em solid #c79f5e;flex:1 1 auto;width:auto;margin:0 auto}.main-nav>ul{list-style:none;padding:0;margin:0;display:flex;flex-direction:row;justify-content:flex-end;gap:1.5em}@media(max-width: 768px){.main-nav>ul{justify-content:center}}nav>ul>li{flex:none;text-align:center;padding:0 .5em}nav>ul>li>a{color:#f7f7f7;text-decoration:none;font-size:1em}nav>ul>li>a:hover{color:#c79f5e}@media(min-width: 768px){.main-nav{border-bottom:none}}.tag{background-color:#1c1c1c;border:1px solid #c79f5e;color:#c79f5e;display:inline-block;padding:.5em 1em;font-size:.9em;text-decoration:none;border-radius:3px;transition:all .2s ease-in-out;cursor:pointer}.tag:hover{background-color:#c79f5e;color:#1c1c1c;text-decoration:none}.pagination{display:flex;justify-content:center;align-items:center;list-style:none;padding:0;margin:2em auto;max-width:400px}.page-item{border:1px solid #a9a9a9;margin:0 2px;border-radius:3px;display:inline-block}.page-link{display:block;padding:.5em .8em;text-decoration:none;font-size:.9em;font-family:"Montserrat",sans-serif;color:#a9a9a9;background-color:#1c1c1c;transition:all .2s ease;border-radius:3px}.page-item:not(.active):not(.disabled) .page-link:hover{color:#c79f5e;background-color:#111;border-color:#c79f5e}.page-item.active .page-link{color:#1c1c1c;background-color:#c79f5e;font-weight:700;border-color:#c79f5e}.page-item.disabled .page-link{color:#111;cursor:default}footer{background-color:#1c1c1c;color:#a9a9a9;font-family:"Montserrat",sans-serif;font-size:.8em;border-top:.1em solid #c79f5e;padding:1em 0;margin:0;text-align:center}footer p{margin:0;padding:0;line-height:1.5}footer p:last-of-type{margin-top:1em}footer a{color:#c79f5e;text-decoration:none}footer a:hover{color:#f7f7f7;text-decoration:underline}footer p img{vertical-align:middle}