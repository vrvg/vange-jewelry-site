  padding: 0;
  max-width: 100%;
  text-align: center;
}

figure img {
  max-width: 100%;
  height: auto;
  border: 1px solid rgba(199, 159, 94, 0.5);
}

figcaption {
  font-family: "Montserrat", sans-serif;
  font-size: 0.8em;
  color: #A9A9A9;
