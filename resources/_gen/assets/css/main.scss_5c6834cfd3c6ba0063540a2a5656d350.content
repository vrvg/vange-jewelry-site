}

.featured-image {
  margin: 2em auto;
  padding: 0;
  max-width: 100%;
  text-align: center;
}

.featured-image > img {
  max-width: 100%;
  height: auto;
  border: 1px solid rgba(199, 159, 94, 0.5);
}

.btn-primary {
  display: inline-block;
  padding: 0.8em 1.5em;
  margin-top: 1em;
  background-color: #C79F5E;
  color: #1C1C1C;
