.featured-creation {
  /* Use strong margins to separate this section from the links and introductory text */
  margin: 4em auto;
  text-align: center;
  /* Constrain the featured block slightly narrower than the main content for focus */
  max-width: 900px;
  /* Style the main title for this section */
}
.featured-creation > h3 {
  color: #F7F7F7;
  margin-bottom: 2em;
}

.creation-summary {
  border: 2px solid #C79F5E;
