  margin: 0 auto;
}

footer {
  /* SCSS for Sticky Footer (Ensures it stays at the bottom when content is short) */
  margin-top: auto;
  /* BACKGROUND & BORDER */
  background-color: #1C1C1C;
  border-top: 0.1em solid #C79F5E;
  /* TYPOGRAPHY */
  color: #A9A9A9;
  font-family: "Montserrat", sans-serif;
  font-size: 0.8em;
  text-align: center;
  /* SPACING & POSITIONING */
  padding: 1em 1.5em;
  margin: 0;
  position: fixed;
  bottom: 0;
  z-index: 1000;
  width: 100%;
  opacity: 85%;
  /* REMOVED: position: sticky; bottom: 0; z-index: 1000; (These conflict with main sticky header) */
  /* REMOVED: background-color: rgba(28, 28, 28, 0.85); (Use solid color for better contrast) */
  /* REMOVED: backdrop-filter/webkit-backdrop-filter (Not necessary on a solid background) */
}

.footer-nav {
  /* Primary Flex Container for links (Remove redundant color/font inheritance) */
  display: flex;
  justify-content: center; /* Center the entire nav group */
  /* Vertical Spacing */
  margin: 1em auto;
  /* Ensure no vertical growth (Not needed as a Flex Item of <body>) */
  /* REMOVED: flex: 1 1 auto; and width/margin auto on mobile */
}

.footer-nav > ul {
  /* Link List (Primary Flex Container for LI) */
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: row; /* Horizontal flow is correct */
  justify-content: center;
  gap: 1em; /* Reduced gap for compact footer links */
}

.footer-nav > ul > li {
  flex: none;
  text-align: center;
  padding: 0;
}

