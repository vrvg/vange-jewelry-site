.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1em;
  padding-bottom: 1em;
  margin-bottom: 8em;
  border-right: 0.1em solid #C79F5E;
  border-left: 0.1em solid #C79F5E;
  box-sizing: border-box;
  overflow: hidden;
  background-color: rgba(28, 28, 28, 0.85);
  border-bottom: 0.1em solid #C79F5E;
  background-image: url("/vange-jewelry-stroke-version.svg");
  background-position: top center;
  background-repeat: no-repeat;
  background-blend-mode: luminosity;
  background-size: 2em 2em;
}

main {
  flex-grow: 1;
  display: block;
  text-align: left;
  background-color: rgba(28, 28, 28, 0.85);
  padding: 2em 1.5em;
  flex-shrink: 0;
}

.creation-container {
  display: block;
  padding: 1.5em 0;
  max-width: 1200px;
  margin: 0 auto;
}
@media (min-width: 768px) {
  .creation-container {
    display: flex;
    flex-direction: row;
    gap: 2em;
    padding: 0;
  }
}

.creation-list {
  flex: 0 0 220px;
  text-align: left;
  padding-right: 1.5em;
}

.creation {
  flex: 1 1 auto;
}

.links-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5em;
  margin-top: 2em;
}
@media (min-width: 768px) {
  .links-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (min-width: 1024px) {
  .links-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/**
 * Base Button Style: Applied to all elements that behave like a button.
 * Sets up basic visual and interactive properties.
 */
.btn, .btn-primary {
  display: inline-block;
  padding: 1em 1.5em;
  margin-top: 1em;
  border: none;
  border-radius: 4px;
  font-weight: 700;
  text-decoration: none;
  text-transform: uppercase;
  text-align: center;
  cursor: pointer;
  transition: background-color, 0.3s, ease-in-out, color, 0.3s, ease-in-out;
}

/**
 * Primary Button (Specific color/theme)
 */
.btn-primary {
  background-color: #C79F5E;
  color: #1C1C1C;
}
.btn-primary:hover, .btn-primary:focus {
  background-color: #A9874F;
  color: #1C1C1C;
}

/**
 * Optional: Secondary Button (If you need a second style)
 */
.btn-secondary {
  background-color: transparent;
  border: 1px solid #C79F5E;
  color: #C79F5E;
}
.btn-secondary:hover, .btn-secondary:focus {
  background-color: #C79F5E;
  color: #F7F7F7;
}

/**
 * Base Card Style: Applies shared structural and visual traits to all card types.
 */
.card-base, .creation-summary-card, .link-item {
  background-color: #111111;
  border: 1px solid #C79F5E;
  border-radius: 4px;
  padding: 1.5em;
  text-align: left;
  overflow: hidden;
  transition: transform, 0.3s, ease-in-out, box-shadow, 0.3s, ease-in-out;
}
.card-base:hover, .creation-summary-card:hover, .link-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(199, 159, 94, 0.2);
}

/**
 * Link Item Card: Used for simple directory links (e.g., your .link-item)
 */
.link-item {
  display: flex;
  flex-direction: column;
  padding: 1.5em;
}
.link-item a {
  text-decoration: none;
  color: #C79F5E;
}
.link-item p {
  margin: 0.5em 0;
  max-width: none;
  text-align: left;
  font-size: 0.9em;
}

/**
 * Summary Card: Used for your primary content previews (e.g., your .creation-summary-card)
 */
.creation-summary-card {
  padding: 0;
}
.creation-summary-card .card-image-link img {
  width: 100%;
  height: auto;
  display: block;
  border-bottom: 1px solid #C79F5E;
}
.creation-summary-card .card-body {
  padding: 1.5em;
}
.creation-summary-card .card-title a {
  font-family: "Playfair Display", serif;
  font-size: 1.2em;
  color: #C79F5E;
  text-decoration: none;
}

.main-nav > ul > li {
  flex: none;
  text-align: center;
  padding: 0 0.5em;
}
.main-nav > ul > li > a {
  font-size: 1em;
