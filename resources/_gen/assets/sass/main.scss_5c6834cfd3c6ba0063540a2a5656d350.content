body {
  font-family: "Montserrat", sans-serif;
  font-size: 1em;
  color: #F7F7F7;
  line-height: 1.5;
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Playfair Display", serif;
  color: #C79F5E;
  line-height: 1.2;
}

h1 {
  font-size: 2.5em;
  margin-top: 2em;
  margin-bottom: 1.5em;
}

h2 {
  font-size: 2em;
  margin-top: 2em;
  margin-bottom: 1.5em;
}

p {
  max-width: 65ch;
  margin-top: 1em;
  margin-bottom: 1em;
  text-align: justify;
}

blockquote {
  margin: 2em 0;
  padding-left: 1.5em;
  border-left: 4px solid #A9A9A9;
  font-style: italic;
  color: #A9A9A9;
}

a {
  color: #C79F5E;
  text-decoration: none;
  transition: color, 0.3s, ease-in-out, text-decoration, 0.3s, ease-in-out;
}
a:hover {
  color: #F7F7F7;
  text-decoration: underline;
}
a:visited {
  color: #A9A9A9;
}

ul, ol {
  padding-left: 1.5em;
}

header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background-color: #1C1C1C;
  opacity: 0.85;
  border-bottom: 0.1em solid #C79F5E;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 0.5em;
  padding-left: 1.5em;
  padding-right: 1.5em;
  padding-top: 0.5em;
  padding-bottom: 0.5em;
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  overflow-x: auto;
  overflow-y: hidden;
}

.logo-and-title {
  display: flex;
  align-items: center;
  gap: 1em;
  flex: 0 1 auto;
}

.site-title {
  font-family: "IBM Plex Mono", monospace;
  font-size: 1em;
  margin-top: 0;
  margin-bottom: 0;
}

header img {
  max-height: 1.5em;
  min-width: 80px;
}

.main-nav {
  flex: 1 1 auto;
  width: auto;
  margin: 0 auto;
}
.main-nav > ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  gap: 0.5em;
}

@media (max-width: 767.98px) {
  .logo-and-title {
    flex-direction: column;
    gap: 0.5em;
    padding-bottom: 0.5em;
  }
  .main-nav {
    text-align: center;
    margin-top: 0;
  }
  .main-nav > ul {
    justify-content: center;
    margin-top: 0;
  }
}
footer {
  margin-top: auto;
  position: fixed;
  bottom: 0;
  z-index: 1000;
  width: 100%;
  background-color: #1C1C1C;
  border-top: 0.1em solid #C79F5E;
  opacity: 0.85;
  color: #A9A9A9;
  font-size: 0.8em;
  text-align: center;
  padding: 1em 1.5em;
  margin: 0;
}
footer > p {
  margin: 0 auto;
  padding-top: 1em;
  border-top: 0.1em solid rgba(199, 159, 94, 0.4);
  text-align: center;
}

.footer-nav {
  display: flex;
  justify-content: center;
  margin: 1em auto;
}
.footer-nav > ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  gap: 1em;
}

